<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/etLoginEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dip"
        android:layout_gravity="center"
        android:ems="14"
        android:hint="@string/login_emailaddresshint"
        android:inputType="textEmailAddress"
        android:importantForAutofill="no"/>

    <EditText
        android:id="@+id/etLoginPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dip"
        android:layout_gravity="center"
        android:ems="14"
        android:hint="@string/loginsignup_passwordhint"
        android:inputType="textPassword"
        android:importantForAutofill="no"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="350dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:layout_gravity="center"
        android:text="@string/login_loginbutton"
        android:backgroundTint="@color/colorAccent"/>

    <TextView
        android:id="@+id/tvLoginCreateAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_createaccount"
        android:layout_marginTop="60dip"
        android:layout_gravity="center"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnLoginProceedSignup"
        android:layout_width="350dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_gravity="center"
        android:text="@string/login_createaccountbutton"
        android:backgroundTint="@color/colorAccent"/>

    <Button
        android:id="@+id/btnLoginForgotPassword"
        android:layout_width="350dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_gravity="center"
        android:text="@string/login_forgotpasswordbutton"
        android:backgroundTint="@color/colorAccent"/>

</LinearLayout>