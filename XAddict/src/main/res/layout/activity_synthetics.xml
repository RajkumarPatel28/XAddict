<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".SyntheticsActivity">

    <TextView
    android:id="@+id/tvTitle"
    style="@style/TitleTextStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/synthetics_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivSynthetic"
                android:layout_width="200dip"
                android:layout_height="200dip"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/mdma"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvInfo"
                style="@style/DrugTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/synthetics_information" />

            <Button
                android:id="@+id/btnInfo"
                style="@style/ButtonStyle"
                android:layout_width="340dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dip"
                android:text="@string/moreinformationbutton" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>