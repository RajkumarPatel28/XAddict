<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".StatusActivity">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/TitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dip"
                android:layout_marginTop="20dip"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvUse"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/status_use"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/rbgUse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dip"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbYes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/status_yesradio"
                            android:textColor="@color/colorWhite" />

                        <RadioButton
                            android:id="@+id/rbNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dip"
                            android:text="@string/status_noradio"
                            android:textColor="@color/colorWhite" />
                    </RadioGroup>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvCrave"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dip"
                    android:text="@string/status_crave"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/sbCrave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:max="10" />

                <TextView
                    android:id="@+id/tvTrigger"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dip"
                    android:text="@string/status_trigger"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvHungry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_hungry"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/sbHungry"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="20dip"
                        android:max="10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvAngry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_angry"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/sbAngry"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="31dip"
                        android:max="10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvLonely"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_lonely"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/sbLonely"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="27dip"
                        android:max="10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTired"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_tired"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/sbTired"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="40dip"
                        android:max="10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvAnxiety"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_anxiety"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/sbAnxiety"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="19dip"
                        android:max="10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvPain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_pain"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/sbPain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="48dip"
                        android:max="10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvOther"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_other"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/sbOther"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="32dip"
                        android:max="10" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnSave"
                style="@style/ButtonStyle"
                android:layout_width="340dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dip"
                android:text="@string/status_savebutton" />

            <Button
                android:id="@+id/btnReset"
                style="@style/ButtonStyle"
                android:layout_width="340dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dip"
                android:text="@string/status_resetbutton" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>